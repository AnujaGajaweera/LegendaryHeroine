# resolve-wine x86_64 build profile
WINE_REPO="https://gitlab.winehq.org/wine/wine.git"
WINE_REF="wine-9.0"
TARGET_ARCH="x86_64"
OUTPUT_NAME="resolve-wine-x86_64"

# Toolchain
CC="clang"
CXX="clang++"
LD="lld"

# Flags tuned for stability and debugability
CFLAGS="-O2 -pipe -fno-omit-frame-pointer"
CXXFLAGS="-O2 -pipe -fno-omit-frame-pointer"
LDFLAGS="-fuse-ld=lld"

# Wine configure flags
CONFIGURE_FLAGS="--enable-win64 --with-vulkan --without-oss"
